<Page
    x:Class="PCManager.WPFUI.ControlPages.PCManagerInfoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PCManager.WPFUI.ControlPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="PCManagerInfoView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontSize="20"
    mc:Ignorable="d">

    <Border BorderBrush="{DynamicResource SystemAccentColorDark1Brush}" BorderThickness="2">
        <Grid
            x:Name="LayoutRoot"
            MinWidth="0"
            MinHeight="0"
            Margin="{DynamicResource ControlPageContentMargin}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Margin="5"
                FontSize="24"
                Text="PC Manager Information" />
            <StackPanel
                Grid.Row="1"
                Grid.Column="0"
                MinWidth="250">
                <TextBox
                    Margin="5,5,5,5"
                    Focusable="True"
                    HorizontalScrollBarVisibility="Auto"
                    IsReadOnly="True"
                    ScrollViewer.CanContentScroll="True"
                    SnapsToDevicePixels="True"
                    Text="{Binding AssemblyVersion}" />
                <TextBox
                    Margin="5,5,5,5"
                    Focusable="True"
                    IsReadOnly="True"
                    ScrollViewer.CanContentScroll="True"
                    SnapsToDevicePixels="True"
                    Text="{Binding AssemblyFileVersion}" />
                <TextBox
                    Margin="5,5,5,5"
                    Focusable="True"
                    IsReadOnly="True"
                    ScrollViewer.CanContentScroll="True"
                    SnapsToDevicePixels="True"
                    Text="{Binding AssemblyInformationVersion}" />
                <TextBox
                    Margin="5,5,5,5"
                    Focusable="True"
                    IsReadOnly="True"
                    ScrollViewer.CanContentScroll="True"
                    SnapsToDevicePixels="True"
                    Text="{Binding DotNetInfo}" />
                <TextBox
                    Margin="5,5,5,5"
                    Focusable="True"
                    IsReadOnly="True"
                    ScrollViewer.CanContentScroll="False"
                    SnapsToDevicePixels="True"
                    Text="{Binding InstallLocation}" />
                <TextBox
                    Margin="5,5,5,5"
                    Focusable="True"
                    IsReadOnly="True"
                    ScrollViewer.CanContentScroll="True"
                    SnapsToDevicePixels="True"
                    Text="{Binding PackageVersion}" />
                <TextBox
                    Margin="5,5,5,5"
                    Focusable="True"
                    IsReadOnly="True"
                    ScrollViewer.CanContentScroll="True"
                    SnapsToDevicePixels="True"
                    Text="{Binding AppInstallerUri}" />
                <TextBox
                    Margin="5,5,5,5"
                    Focusable="True"
                    IsReadOnly="True"
                    ScrollViewer.CanContentScroll="True"
                    SnapsToDevicePixels="True"
                    Text="{Binding PackageChannel}" />
                <TextBox
                    Margin="5,5,5,5"
                    Focusable="True"
                    IsReadOnly="True"
                    ScrollViewer.CanContentScroll="True"
                    SnapsToDevicePixels="True"
                    Text="{Binding DisplayName}" />
                <TextBox
                    Margin="5,5,5,5"
                    Focusable="True"
                    IsReadOnly="True"
                    ScrollViewer.CanContentScroll="True"
                    SnapsToDevicePixels="True"
                    Text="{Binding MSIXVersionNumber}" />
            </StackPanel>



            <ScrollViewer
                Grid.Row="1"
                Grid.Column="1"
                Width="300"
                Height="450"
                Margin="5,-10,0,0"
                CanContentScroll="True"
                VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="16" Background="{DynamicResource SystemControlForegroundChromeGrayBrush}">
                    <TextBlock Text="Hello" />
                    <TextBlock Text="Hello" />
                    <TextBlock Text="Hello" />
                    <TextBlock Text="Hello" />
                    <TextBlock Text="Hello" />
                    <TextBlock Text="Hello" />
                    <TextBlock Text="Hello" />
                    <TextBlock Text="Hello" />
                    <TextBlock Text="Hello" />
                    <TextBlock Text="Hello" />
                    <TextBlock Text="Hello" />
                </StackPanel>
            </ScrollViewer>
            <StackPanel
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                MinWidth="550">
                <TextBlock Margin="5" Text="PC Manager App Log" />
                <TextBox
                        x:Name="PCManagerAppLogText"
                        MinHeight="300"
                        MaxHeight="400"
                        MinWidth="550"
                        Width="Auto"
                        Margin="5,5,15,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        IsReadOnly="True"
                        ScrollViewer.CanContentScroll="True"
                        Text=""
                        VerticalScrollBarVisibility="Visible" />

            </StackPanel>
        </Grid>
    </Border>
</Page>
